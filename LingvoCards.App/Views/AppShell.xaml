<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:LingvoCards.App.Views"
       x:Class="LingvoCards.App.Views.AppShell"
       Shell.TitleColor="LightGray"
       Shell.ForegroundColor="Beige"
       >

    <FlyoutItem Title="View">
        <ShellContent ContentTemplate="{DataTemplate views:CardsPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Practice">
        <ShellContent ContentTemplate="{DataTemplate views:PracticePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Manage tags">
        <ShellContent ContentTemplate="{DataTemplate views:TagPage}" />
    </FlyoutItem>

</Shell>